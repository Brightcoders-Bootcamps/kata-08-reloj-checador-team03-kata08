<p id="notice"><%= notice %></p>
<h1>List Employees</h1>
<div class="container-content">

<div class="d-flex justify-content-between bd-highlight mb-3">
  <div class="d-flex justify-content-start">
     <%= form_tag(employees_search_path, method: "post", remote: true, authenticity_token: true, role: "form",class: "form") do %>
     <%= text_field_tag('search', nil, placeholder: 'Enter search term...', class: 'form-control') %>
     <% end %>
  </div>
</div>

<div class="d-flex justify-content-center">
  <%= link_to 'New employee', new_employee_path(Employee.new), remote: true, :class=> "btn btn-success create-button" %>
</div>
</div>


<div class="modal fade" id="employee-modal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
<%= render "form"  %>
</div>


<table class="table">
  <thead class="table-thead">
    <tr>
      <th class="table-thead-th">Name</th>
      <th class="table-thead-th">Last name</th>
      <th class="table-thead-th">Position</th>
      <th class="table-thead-th">Email</th>
      <th class="table-thead-th">Private number</th>
      <th class="table-thead-th">Actions</th>
    </tr>
  </thead>

  <tbody id="employee-table-body">
    <%= render 'search', remote: true %>
  </tbody>
</table>
<%= paginate @employees %>

</div>
