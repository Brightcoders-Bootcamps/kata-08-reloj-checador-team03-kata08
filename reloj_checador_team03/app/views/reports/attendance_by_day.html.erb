<table>
  <thead>
    <tr>
      <th>Date attendance</th>
      <th>Employee</th>
      <th>Detail</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @attendances.each do |attendance| %>
      <tr>
        <td><%= attendance.date_time.strftime("%m/%d/%Y") %></td>
        <td><%= attendance.employee.fullname %></td>
        <td><%= attendance.type_check %></td>
 <td><%= link_to 'Destroy', attendance, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>