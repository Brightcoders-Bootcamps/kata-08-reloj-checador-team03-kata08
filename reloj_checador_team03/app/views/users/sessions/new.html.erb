
<div class="container-fluid">
  <div class="row main-content text-center bg-success">

    <div class="col-md-4 text-center counter-styles">
      <div class="row">
        <img src="<%=asset_path("foocorp.png")%>" >
      </div>
    </div>

  
    <div class="col-md-8 col-xs-12 col-sm-12 check_form">
      <div class="container-fluid">
        <div class="row">
          <h2> Welcome!</h2>
        </div>
        <div class="row">
          <div class="form-group">
          
            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-inputs form_input row">
              <%= f.input :email  ,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" },:placeholder => "juanperez@gmail.com" %>
            </div>
            <div class="form-inputs form_input row">
              <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" },:placeholder => "password123" %>
            </div>
            <div class="remember-me text-left" >
              <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            </div>
            <div id="form-actions">
              <%= f.button :submit, "Log in" %>
            </div>

              <% end %>

            <div class="row justify-content-center" id="login-text">

            </div>
          </div>
        </div>
      </div>
    </div> 
</div>
