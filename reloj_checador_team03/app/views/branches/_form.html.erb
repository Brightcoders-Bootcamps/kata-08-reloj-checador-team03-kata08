<div class="modal-dialog">
<% @branch= Branch.new if @branch.nil?  %>
<%  if request.path.include?('edit') then text = 'Edit Branch' else text = 'Create a new Branch' end %>
<%= simple_form_for(@branch , remote: true) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel"><%= text %></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :address %>
  </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <%= f.submit "Save branch", :class => 'btn btn-primary create-button' %>
      </div>
    </div>
    <% end %>
  </div>