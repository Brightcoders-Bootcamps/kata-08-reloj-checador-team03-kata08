<p id="notice"><%= notice %></p>
<h1>Branches</h1>
<div class="container-content">

  <div class="d-flex justify-content-between bd-highlightm mb-3">
    <div class="d-flex justify-content-start">
     <%= form_tag(branches_path, method: "post", remote: true, authenticity_token: true, role: "form",class: "form") do %>
     <%= text_field_tag('search', nil, placeholder: 'Enter search term...', class: 'form-control') %>
     <% end %>
    </div>

    <div class="d-flex justify-content-center">
      <%= link_to 'New Branch', new_branch_path(Branch.new), remote: true, :class=> "btn btn-success create-button" %>
    </div>
  </div>

  <div class="modal fade" id="branch-modal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <%= render "form"  %>
  </div>

  <table class="table">
    <thead class="table-thead">
      <tr>
        <th class="table-thead-th">Name</th>
        <th class="table-thead-th">Address</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody id="employee-table-body">
      <% @branches.each do |branch| %>
        <tr>
          <td><%= branch.name %></td>
          <td><%= branch.address %></td>
          <td><%= link_to 'Show', branch %></td>
          <td><%= link_to 'Edit', edit_branch_path(branch) %></td>
          <td><%= link_to 'Destroy', branch, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to 'New Branch', new_branch_path %>
</div>